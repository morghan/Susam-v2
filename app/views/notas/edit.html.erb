  <p style="display:none">
    <%= f.label :subject_id %><br />
    <%= f.text_field :subject_id %>
  </p>
  <p style="display:none">
    <%= f.label :student_id %><br />
    <%= f.text_field :student_id %>
  </p>
  <p>
    <%= f.label :examen_1 %><br />
    <%= f.text_field :examen_1 %>
  </p>
  <p>
    <%= f.label :examen_2 %><br />
    <%= f.text_field :examen_2 %>
  </p>
  <p>
    <%= f.label :examen_3 %><br />
    <%= f.text_field :examen_3 %>
  </p>
  <p>
    <%= f.label :acumulado %><br />
