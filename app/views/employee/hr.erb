

<div id="content-header">
    <%= image_tag("/images/HR/show_hr.png") %>
  <h1><%= "#{t('hr_management')}" %></h1>
  <h3><%= t('human_resource') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="box">
    <% if permitted_to? :settings, :employee %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('setting')}", :controller=>"employee", :action=>"settings"%></div>
        <div class="link-descr"><%= "#{t('hr_setting')}" %>.</div>
      </div>
    <%end%>

    <% if permitted_to? :employee_management, :employee %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('employee_admission')}", :controller=>"employee", :action=>"admission1" %></div>
        <div class="link-descr"><%= t('employee_admission_form') %></div>
      </div>

      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('employee_subject_association')}", :controller=>"employee", :action=>"subject_assignment"%></div>
        <div class="link-descr"><%= t('assign_an_employee') %></div>
      </div>
    <%end%>

    <% if permitted_to? :search, :employee %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('employee_search')}", :controller=>"employee", :action=>"search" %></div>
        <div class="link-descr"><%= "#{t('search_for_employees')}" %></div>
      </div>
    <%end%>
  </div>
</div>
